<Window  x:Class="RestaurantService.TouchMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alert!" AllowsTransparency="True" Height="100" Width="400" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen"  Topmost="True"   WindowStyle="None" >

    <Window.Background>


        <ImageBrush ImageSource="/media/keylock.png"/>

    </Window.Background>


    <Border BorderThickness="5" BorderBrush="Red"  CornerRadius="20">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="DarkBlue" Offset="0"/>
                <GradientStop Color="DarkGray" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
 
            <TextBlock Name="tbMessage" TextAlignment="Center" Height="auto" TextWrapping="Wrap" Text="Text" VerticalAlignment="Center" Width="auto" FontSize="20"  FontWeight="Bold" Foreground="AliceBlue"/>

     

    </Border>
</Window>
