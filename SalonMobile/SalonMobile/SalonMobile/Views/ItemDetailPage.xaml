<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalonMobile.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15" Orientation="Vertical">
        <StackLayout Orientation="Horizontal">
            <Label Text="First name:" FontSize="Small" />
            <Label Text="{Binding Item.FirstName}" FontSize="Small"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">

            <Label Text="Last Name:" FontSize="Small" />
            <Label Text="{Binding Item.LastName}" FontSize="Small"/>
        </StackLayout>

    </StackLayout>
</ContentPage>