
@model IEnumerable<WebAccess.Models.SystemMessage>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Scripts/charts/loader.js"></script>

<script type="text/javascript" class="init">

    $(document).ready(function () {





        $("#dvTodaysSales").load('@(Url.Action("GetDailySales","Dashboard",null, Request.Url.Scheme))');

        $("#dvYesterdaysSales").load('@(Url.Action("GetYesterdaysSales","Dashboard",null, Request.Url.Scheme))');

        $("#dvWeeklySales").load('@(Url.Action("GetWeeklySales","Dashboard",null, Request.Url.Scheme))');
        $("#dvMonthlySales").load('@(Url.Action("GetMonthlySales","Dashboard",null, Request.Url.Scheme))');
    });



</script>


<ul class="breadcrumb">
    <li><a href="\Home">@VTTLanguages.Resources.Home</a></li>
    <li class="active">@VTTLanguages.Resources.Dashboard</li>
</ul>



<h3>@VTTLanguages.Resources.Dashboard </h3>

@Html.Partial("_MessagesPartial", Model)



<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                    <h3 class="panel-title">Daily Sales</h3>
            </div>
            <div class="table-responsive col-sm-offset-1" id="dvTodaysSales">
                <table height="220">
                    <tr>
                        <td width="200">&nbsp;</td>
                        <td><img src="~/Content/loading.gif" width="200" height="200" /></td>
                        <td></td>
                    </tr>
                </table>
            </div>

        </div>
    </div>
 

    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Weekly Sales</h3>
            </div>
            <div class="table-responsive col-sm-offset-1" id="dvWeeklySales">
                <table height="220">
                    <tr>
                        <td width="200">&nbsp;</td>
                        <td><img src="~/Content/loading.gif" width="200" height="200" /></td>
                        <td></td>
                    </tr>
                </table>

            </div>

        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Monthly Sales</h3>
            </div>
            <div class="table-responsive col-sm-offset-1" id="dvMonthlySales">
                <table height="220">
                    <tr>
                        <td width="200">&nbsp;</td>
                        <td><img src="~/Content/loading.gif" width="200" height="200" /></td>
                        <td></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

</div>



