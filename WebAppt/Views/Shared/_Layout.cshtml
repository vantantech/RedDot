<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Red Dot Web Portal</title>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.min.js"></script>
    <script src="http://code.angularjs.org/1.2.8/angular-animate.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    @{
        int timeout = 0;
    }
    @if (TempData["UserMessage"] != null)
    {
        var usermess1 = TempData["UserMessage"] as WebAccess.Models.UserMessage;
        timeout = usermess1.TimeOut;
        if (usermess1.CssClassName == "alert-danger")
        {
            timeout = 2000;
        }
    }
    <script type="text/javascript">
            $(document).ready(function () {
                $("#holder").hide();




                $("#message-alert").fadeTo(@(timeout), 50).slideUp(200, function () { $("#message-alert").slideUp(200); });

                $("#refresh").click(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });

                $("#create").click(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });


                $("#delete").click(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });

                $("#submit").click(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });

                $("#update").click(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });



                $("#send").click(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });

                $("#slowform").submit(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });

                $("#target").submit(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });

                $(".slowform").submit(function () {
                    $("#mainbody").hide();
                    $("#holder").show();
                    image = new Image();
                    image.src = "/Content/loading.gif";
                    image.onload = function () {
                        $("#holder").empty().append(image);
                    };

                    return true;
                });

            });
    </script>


    <meta name="description" content="WebAccess Data Management System" />
</head>
<body>


    @Html.Partial("~/Views/Shared/_Menu.cshtml")



    <div class="container-fluid body-content" id="mainbody">






        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - Red Dot POS Web Portal , <a href="http://www.vantantech.com">Van Tan Technologies</a></p>
        </footer>
    </div>

    <div id="holder"> </div>

    @if (TempData["UserMessage"] != null)
    {
        var usermess = TempData["UserMessage"] as WebAccess.Models.UserMessage;

        <div class="row">
            <div class="col-md-8 col-md-offset-1 alert alert-dismissible @usermess.CssClassName" id="message-alert">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@usermess.Title</strong> @usermess.Message
            </div>
        </div>



    }


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
